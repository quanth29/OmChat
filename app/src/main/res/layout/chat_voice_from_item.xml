<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/chatBubbleContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <include layout="@layout/chat_avator" />

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chatText"
            style="@style/chatBubbleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_from_bg" />

        <ImageView
            android:id="@+id/msg_voice_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="10dp"
            android:background="@drawable/voicefrom3" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/msg_voice_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/msg_voice_isread"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="right"
            android:background="@drawable/red_dot" />

        <TextView
            android:id="@+id/msg_voice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="15" />
    </LinearLayout>
</LinearLayout>