<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!--拍摄层-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_light"
        android:orientation="vertical">
        <!--拍摄toolbar-->
        <!--取消-->
        <ImageView
            android:id="@+id/cancelCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_cancel_capture" />

        <!--取景-->
        <FrameLayout
            android:id="@+id/videoViewContainer"
            android:layout_width="match_parent"
            android:layout_height="280dp" >
            <TextureView
                android:id="@+id/mTextureView"
                android:layout_width="match_parent"
                android:layout_height="270dp" />
            </FrameLayout>
        <!--按住拍-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center">

            <in.ohmama.omchat.ui.view.OmLongClickButton
                android:id="@+id/btn_press_to_capture"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/press_to_capture"
                android:text="press"
                android:textColor="@color/white" />

        </RelativeLayout>
    </LinearLayout>

    <!--底部tabbar-->
    <in.ohmama.omchat.ui.view.NestRadioGroup
        android:id="@+id/bottomTabsContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/light_gray_bg"
        android:orientation="horizontal">

        <!--chat-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <!--msg count-->
                    <TextView
                        android:id="@+id/dot_num_new_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/red_dot"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/ivChatList"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/main_tab_chat" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvChatList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="omchat" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/rbChatingList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null" />
        </RelativeLayout>

        <!--contact-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <!--msg count-->
                    <TextView
                        android:id="@+id/dot_num_new_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/red_dot"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/ivRoster"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/main_tab_head" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvRoster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="contact" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/rbRoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null" />
        </RelativeLayout>

        <!--find-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivExplore"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/main_tab_find" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvExplore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expore" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/rbExpore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null" />
        </RelativeLayout>

        <!--me-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivMe"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/main_tab_chat" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/rbMe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null" />
        </RelativeLayout>

    </in.ohmama.omchat.ui.view.NestRadioGroup>

    <android.support.v7.widget.Toolbar
        android:id="@+id/mToolbar"
        style="@style/Widget.MyApp.ActionBar.Solid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:padding="4dp"
        android:theme="@style/ThemeOverlay.MyApp.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"></android.support.v7.widget.Toolbar>

    <in.ohmama.omchat.ui.view.OmScrollView
        android:id="@+id/omScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomTabsContainer"
        android:layout_below="@+id/mToolbar"
        android:fillViewport="true">

        <!--内容层-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpage_infos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </in.ohmama.omchat.ui.view.OmScrollView>
</RelativeLayout>

